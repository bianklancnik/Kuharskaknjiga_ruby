<!DOCTYPE html>
<html>
<head>
  <title>Kuharskaknjiga</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">Kuharska knjiga</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Domov", home_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            
             <% if user_signed_in? %>
        <!--This block is only visible to signed in admins -->
          <li><%= link_to "Ustvari nov recept", new_post_path %></li>
          <li><%= link_to 'Moj račun', edit_user_registration_path  %></li>
          <li><%= link_to 'Odjava', destroy_user_session_path, :method => :delete %></li>
        <!-- The block ends here -->
        <% else %>
          <li><%= link_to "Prijava", new_user_session_path %></li>
        <% end %>
          </ul>
          
        </div><!--/.nav-collapse -->
      </div>
    </nav>
<div class="container">

      <%= yield %>

    </div><!-- /.container -->
</body>
</html>
